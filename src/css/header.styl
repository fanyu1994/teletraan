@font-face
{
  font-family: title
  src url("../../public/font/font2.ttf")
}
.header
  width 100%
  height 60px
  background: url("../../public/img/bg2.jpg") no-repeat center center
  background-size: 100% 100%
  position fixed
  font-family: title
  font-size: 20px
  user-select none
  cursor pointer
  z-index 1
  .header_img,.header_name,.header-title,.header_tc
    position absolute
    top 50%
    transform: translate(0,-50%)
  .header-title
    left 22%
    color: #fb986f
    font-size: 40px
    font-weight: 600
  .header_tc
    width: 40px
    left 17%
  .header_name
    right: 100px
    text-shadow: 1px 1px 2px 
    .header_name_name
      color: #a9d86e
  .header_xl 
    width: 100px
    height: 120px
    text-align: center
    position absolute
    right: 50px
    top 70px
    border-radius: 3px
    background-color #a9d86e
    box-shadow: 0 0 5px
    .header_xl_j
      position absolute
      left 10px 
      top -10px
      width: 0;
      height: 0;
      border-width: 0 8px 10px 8px 
      border-style: solid
      border-color: transparent transparent#a9d86e
    .header_xl_x
      height 30px 
      margin: 15px auto
      display inline-block
  .header_img
    right 30px
    width: 45px
    height: 45px
    .header_img_img
      width: 45px
      border-radius: 50%
      transition all 1.5s
      &:hover
        transform:rotate(360deg)

