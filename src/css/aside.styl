@font-face
{
  font-family: title
  src url("../../public/font/font2.ttf")
}
.aside
  width: 170px
  height: 100%
  background: url("../../public/img/bg2.jpg") no-repeat center center
  background-size: 100% 100%
  position fixed
  top 0
  left -150px
  font-family: title
  user-select none
  z-index 2
  transition all .4s ease-in
  &:hover
    left -10px
  .aside_name,.aside_ui,.aside_tx,.aside_tx_img
    position absolute
    top 20px
    left 50%
    transform: translate(-50%)
    .aside_tx_one
      width: 130px
      height: 130px
      border-radius: 50%
      border 5px solid #072256
      border-top-color: #E07514
      border-left-color: #E07514
      transition all .5s ease-in
      &:hover
        transform: rotate(180deg)
    .aside_tx_img
      top 5px
      width: 120px
      border-radius: 50%   
  .aside_name
    font-size: 20px
    top 180px
    padding: 0 10px
    border-bottom: 1px solid black
  .aside_ui
    width: 100%
    font-size: 15px
    left 50%
    top 230px
    list-style: none
    line-height: 40px
